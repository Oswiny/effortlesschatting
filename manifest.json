{
    "manifest_version": 3,
    "name": "EffortlessChatting",
    "version": "0.0.1",
    "description": "Allows you to chat in twitch using only your mouse.",
    "icons": {
        "48": "icons/"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.twitch.tv/*"
            ],
            "js": [
                "injector.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "*://www.twitch.tv/*"
            ],
            "resources": [
                "effortlesschatting.js",
                "effortlesschatting.css",
                "configManager.js"
            ]
        }
    ]
}