{
    "manifest_version": 3,
    "name": "EffortlessChatting",
    "version": "0.0.1",
    "description": "Allows you to chat in twitch using only your mouse.",
    "icons": {
        "8": "logo/8/logo.png",
        "16": "logo/16/logo.png",
        "32": "logo/32/logo.png",
        "48": "logo/48/logo.png",
        "64": "logo/64/logo.png",
        "128": "logo/128/logo.png",
        "256": "logo/256/logo.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.twitch.tv/*"
            ],
            "js": [
                "injector.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "*://www.twitch.tv/*"
            ],
            "resources": [
                "effortlesschatting.js",
                "effortlesschatting.css",
                "config.js",
                "configAccess.js",
                "emoteRequestHandler.js",
                "internalTraversalHandler.js"
            ]
        }
    ]
}